<!DOCTYPE html>
<html>
  <head>
    <title>BloggersApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <% if current_writer %>
   Hello <%= current_writer.email %>
   <%= link_to 'Log Out', sessions_path, method: :delete %>
   <% else %>
   <%= link_to 'Writers Registration', writers_registration_path %>
   |
   <%= link_to 'Users Registration', user_registration_path %>
   |
   <%= link_to 'Log In', new_sessions_path %>
   <%end%>


    <%= yield %>
  </body>
</html>
